#!/bin/bash
# PornAOSP OTA

DEVICE=`grep ro.paosp.device $OUT/*/build.prop | cut -d'=' -f2`
TYPE=`grep ro.paosp.type $OUT/*/build.prop | cut -d'=' -f2`
VERSION=`grep ro.paosp.version $OUT/*/build.prop | cut -d'=' -f2`
TIME=`grep 'ro.build.date=' $OUT/*/build.prop | cut -d' ' -f4`

OTA=${OTA_TYPE,,}
TITLE=$DEVICE\_$OTA

PAOSP_TARGET_PACKAGE=$VERSION-$DEVICE.zip

# Create OTA XML file
if [ -f $OTA_DIR/ota_conf ] &>/dev/null; then

cat >$OUT/ota_$TITLE.xml <<EOF
<?xml version="1.0" encoding="UTF-8"?>
<PornOTA>
    <Pie>
        <$DEVICE>
            <Filename>$VERSION</Filename>
			<BuildTime>$TIME</BuildTime>
            <RomUrl>https://mirrors.c0urier.net/android/teamhorizon/P/$TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE</RomUrl>
            <MD5Url>https://mirrors.c0urier.net/android/teamhorizon/P/$TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE.md5sum</MD5Url>
            <ChangelogUrl>https://mirrors.c0urier.net/android/teamhorizon/P/$TYPE/$DEVICE/Changelog.txt</ChangelogUrl>
        </$DEVICE>
    </Pie>
</PornOTA>
EOF
fi
